# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=suji

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Cron Job Configuration (for load-balanced environments)
# Options: "distributed" (default - all instances can run jobs with locking)
#          "leader" (only one instance runs jobs, with automatic failover)
CRON_MODE=distributed

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Apple OAuth
APPLE_CLIENT_ID=your-apple-client-id
APPLE_PRIVATE_KEY=your-apple-private-key
APPLE_KEY_ID=your-apple-key-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_CALLBACK_URL=http://localhost:3000/api/auth/apple/callback

# Frontend URLs for OAuth redirects
FRONTEND_URL=http://localhost:3001

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Meal Voucher Providers
SWILE_API_KEY=your-swile-api-key
EDENRED_API_KEY=your-edenred-api-key
SODEXO_API_KEY=your-sodexo-api-key
APETIZ_API_KEY=your-apetiz-api-key
UP_DEJEUNER_API_KEY=your-up-dejeuner-api-key

# File Upload
MAX_FILE_SIZE=5242880

# INSEE API Configuration (French business registry)
# Get your API key from: https://api.insee.fr
INSEE_API_URL=https://api.insee.fr/api-sirene/3.11
INSEE_API_KEY=your-insee-api-key

# Email Configuration (for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
